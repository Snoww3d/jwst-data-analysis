{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "SecretKey": "CHANGE_THIS_IN_PRODUCTION_MIN_32_CHARS_SECURE_KEY_HERE",
    "Issuer": "JwstDataAnalysis",
    "Audience": "JwstDataAnalysisClient",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7
  },
  "MongoDB": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "jwst_data_analysis"
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:3001"
    ]
  },
  "FileStorage": {
    "MaxFileSize": 104857600,
    "AllowedExtensions": [".fits", ".fits.gz", ".jpg", ".png", ".tiff", ".csv", ".json"]
  },
  "ProcessingEngine": {
    "BaseUrl": "http://localhost:8000"
  },
  "Downloads": {
    "PollIntervalMs": 500,
    "BasePath": "/app/data/mast"
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Forwarded-For",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "QuotaExceededResponse": {
      "Content": "{\"error\":\"Rate limit exceeded. Please try again later.\",\"retryAfter\":\"{RetryAfter}\"}",
      "ContentType": "application/json"
    },
    "IpWhitelist": [],
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      },
      {
        "Endpoint": "*",
        "Period": "1h",
        "Limit": 1000
      },
      {
        "Endpoint": "post:/api/mast/*",
        "Period": "1m",
        "Limit": 20
      },
      {
        "Endpoint": "post:/api/jwstdata/*/process",
        "Period": "1m",
        "Limit": 10
      }
    ]
  }
}
